<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.job.labc1.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg_artitst" />

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView">


            <RelativeLayout
                android:layout_width="593dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView

                    android:id="@+id/cardView"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_mu1" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/cardView"
                        android:layout_gravity="end"
                        android:layout_marginTop="125dp"
                        app:srcCompat="@drawable/ic_more_vert" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:paddingStart="10dp"
                        android:text="The Resistance" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:paddingStart="10dp"
                        android:text="11 songs" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_alignTop="@+id/cardView"
                    android:layout_alignStart="@+id/cardView"
                    android:layout_marginStart="160dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_mu2" />

                    <ImageView

                        android:id="@+id/imageView5"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/cardView2"
                        android:layout_gravity="end"
                        android:layout_marginTop="125dp"
                        app:srcCompat="@drawable/ic_more_vert" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:paddingStart="10dp"
                        android:text="The 2nd Law" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:paddingStart="10dp"
                        android:text="13 songs" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_alignTop="@+id/cardView2"
                    android:layout_alignStart="@+id/cardView2"
                    android:layout_marginStart="160dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_mu5" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/cardView3"
                        android:layout_gravity="end"
                        android:layout_marginTop="125dp"
                        app:srcCompat="@drawable/ic_more_vert" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:paddingStart="10dp"
                        android:text="Undisclosed D..." />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:paddingStart="10dp"
                        android:text="4 songs" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_alignTop="@+id/cardView3"
                    android:layout_alignStart="@+id/cardView3"
                    android:layout_marginStart="160dp"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_mu4" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_alignEnd="@+id/cardView3"
                        android:layout_gravity="end"
                        android:layout_marginTop="125dp"
                        app:srcCompat="@drawable/ic_more_vert" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        android:paddingStart="10dp"
                        android:text="Black Holes" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="150dp"
                        android:paddingStart="10dp"
                        android:text="12 songs" />

                </android.support.v7.widget.CardView>
            </RelativeLayout>
    </HorizontalScrollView>
</RelativeLayout>
