<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.job.labc1.MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bg_artitst" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="155dp"
                android:layout_height="220dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="54dp"
                android:layout_alignTop="@+id/cardView2"
                android:layout_alignParentEnd="true"
                android:onClick="other">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_mu2" />

                <ImageView

                    android:id="@+id/imageView5"
                    android:layout_width="29dp"
                    android:layout_height="43dp"
                    android:layout_alignEnd="@+id/cardView2"
                    android:layout_gravity="end"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="165dp"
                    app:srcCompat="@drawable/ic_more_vert" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:paddingStart="10dp"
                    android:text="The 2nd Law" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="185dp"
                    android:paddingStart="10dp"
                    android:text="13 songs" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="155dp"
                android:layout_height="220dp"
                android:layout_marginRight="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:onClick="other">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_mu1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="29dp"
                    android:layout_height="43dp"
                    android:layout_alignEnd="@+id/cardView2"
                    android:layout_gravity="end"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="165dp"
                    app:srcCompat="@drawable/ic_more_vert" />

                <TextView
                    android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                android:paddingStart="10dp"
                android:text="The Resistance"
                    android:onClick="other"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="185dp"
                    android:paddingStart="10dp"
                    android:text="11 songs" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="155dp"
                android:layout_height="220dp"
                android:layout_marginRight="54dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="22dp"
                android:layout_below="@+id/cardView2"
                android:layout_alignParentStart="@+id/cardView2"
                android:layout_marginTop="22dp"
                android:id="@+id/cardView3"
                android:onClick="other">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_mu5" />

                <ImageView

                    android:id="@+id/imageView7"
                    android:layout_width="29dp"
                    android:layout_height="43dp"
                    android:layout_alignEnd="@+id/cardView2"
                    android:layout_gravity="end"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="165dp"
                    app:srcCompat="@drawable/ic_more_vert" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="29dp"
                    android:layout_height="43dp"
                    android:layout_alignEnd="@+id/cardView2"
                    android:layout_gravity="end"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="165dp"
                    app:srcCompat="@drawable/ic_more_vert" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:paddingStart="10dp"
                    android:text="Undisclosed Desires" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="185dp"
                    android:paddingStart="10dp"
                    android:text="4 songs" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_alignEnd="@+id/cardView"
                android:layout_alignTop="@+id/cardView3"
                android:layout_width="155dp"
                android:layout_height="220dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="54dp"
                android:layout_alignParentEnd="true"
                android:onClick="other">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_mu4" />

                <ImageView

                    android:id="@+id/imageView9"
                    android:layout_width="29dp"
                    android:layout_height="43dp"
                    android:layout_alignEnd="@+id/cardView2"
                    android:layout_gravity="end"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="165dp"
                    app:srcCompat="@drawable/ic_more_vert" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="165dp"
                    android:paddingStart="10dp"
                    android:text="Black Holes" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="185dp"
                    android:paddingStart="10dp"
                    android:text="12 songs" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>


</RelativeLayout>
